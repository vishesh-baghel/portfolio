{
  "name": "vishesh-experiments",
  "version": "0.0.1",
  "description": "Production-ready integration patterns via MCP. Access battle-tested code from OSS contributions directly in your IDE.",
  "type": "module",
  "bin": "dist/stdio.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    ".experiments",
    "README.md",
    "CHANGELOG.md"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "prepare-content": "cross-env PREPARE=true node dist/prepare-content/copy-experiments.js",
    "build": "tsup src/stdio.ts src/index.ts src/prepare-content/copy-experiments.ts --format esm --dts --clean && pnpm run prepare-content",
    "dev": "tsup src/stdio.ts src/index.ts --format esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "prepublishOnly": "pnpm run build && pnpm run test"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "mastra",
    "ai-agents",
    "integrations",
    "typescript",
    "nextjs",
    "postgresql",
    "code-examples",
    "production-patterns",
    "cursor",
    "windsurf",
    "claude-desktop"
  ],
  "author": "Vishesh Baghel <visheshbaghel99@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vishesh-baghel/portfolio",
    "directory": "packages/experiments-mcp"
  },
  "homepage": "https://visheshbaghel.com/experiments",
  "bugs": "https://github.com/vishesh-baghel/portfolio/issues",
  "dependencies": {
    "@ai-sdk/openai": "^2.0.42",
    "@mastra/core": "^0.20.0",
    "@mastra/mcp": "^0.13.0",
    "@modelcontextprotocol/sdk": "^1.17.0",
    "gray-matter": "^4.0.3",
    "zod": "^4.1.8",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "cross-env": "^7.0.3",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^3.0.0"
  }
}
