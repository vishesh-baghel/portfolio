# OpenAI API Key (required for Mastra agent and embeddings)
OPENAI_API_KEY=your_openai_api_key_here

# Postgres (required for Mastra storage and vector memory)
# Mastra uses Postgres for conversation storage and pgvector for semantic recall
# Example: postgresql://user:password@localhost:5432/mydb
POSTGRES_URL=postgresql://user:password@localhost:5432/mydb

# Optional custom schema name for Mastra tables (defaults to public)
MASTRA_PG_SCHEMA=public
