# OpenAI API Key (required for Mastra agent and embeddings)
OPENAI_API_KEY=your_openai_api_key_here

# Postgres (required for Mastra storage and vector memory)
# Mastra uses Postgres for conversation storage and pgvector for semantic recall
# Use the simple connection string without query parameters to avoid duplicate DB warnings
# Example: postgresql://user:password@localhost:5432/mydb
PORTFOLIO_POSTGRES_URL_SIMPLE=postgresql://user:password@localhost:5432/mydb

# Optional custom schema name for Mastra tables (defaults to public)
PORTFOLIO_PG_SCHEMA=public

# Observability (optional - for Vercel deployment)
# Vercel automatically configures OTEL when @vercel/otel is installed
# No additional env vars needed for basic tracing
